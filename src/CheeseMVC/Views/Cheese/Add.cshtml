@model CheeseMVC.ViewModels.AddCheeseViewModel

<h2>Add Cheese</h2>
@if (Model.Categories.Count == 0)
{
    <p>Please <a asp-controller="Category" asp-action="Add">add a category</a> first.</p>

}

@if (Model.Categories.Count > 0)
{
<form asp-controller="Cheese" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="CheeseCategoryID"></label>
        <select asp-for="CheeseCategoryID" asp-items="Model.Categories"></select>
    </div>

    <input type="submit" value="Add Cheese" />

</form> }
