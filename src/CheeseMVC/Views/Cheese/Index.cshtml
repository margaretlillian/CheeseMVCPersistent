@model List<CheeseMVC.Models.Cheese>

<h2>Cheese</h2>
<p>Welcome to the cheesiest website in the universe!</p>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Category</th>
        <th class="descr">Description</th>

    </tr>

    @foreach (var cheese in Model)
    {
    <tr>
        <td>@cheese.Name</td>
        <td>@cheese.CheeseCategory.Name</td>
        <td>@cheese.Description</td>

    </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
