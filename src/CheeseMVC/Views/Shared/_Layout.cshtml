<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CheeseMVC</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <h1><a asp-controller="Cheese" asp-action="Index">Cheese MVC</a> </h1>

    <section id="nav">
        <ul>
    <li><a asp-controller="Cheese" asp-action="Index">Home</a></li>
    <li><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></li>
    <li><a asp-controller="Category" asp-action="Index">Cheese Categories</a></li>
    <li><a asp-controller="Menu" asp-action="Index">Cheese Menus</a></li>

                </ul>
        </section>
          
    <section id="content">
        @RenderBody()
        </section>


    @RenderSection("scripts", required: false)
</body>
</html>
