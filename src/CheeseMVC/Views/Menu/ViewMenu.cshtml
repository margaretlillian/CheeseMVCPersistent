@model CheeseMVC.ViewModels.ViewMenuViewModel

<h2>@Model.Menu.Name</h2>

<ul>
@foreach (var cheeseMenu in Model.Items) {
    <li>@cheeseMenu.Cheese.Name</li>
 }
    </ul>

@if (Model.Items.Count == 0)
{
    <p>This menu has no items. But you can change that! </p>
    

}
<p><a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.ID"> Add item to the menu.</a></p>